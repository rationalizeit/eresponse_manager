<%- model_class = @lead.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @lead.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @lead.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @lead.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @lead.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subscribed) %>:</strong></dt>
  <dd><%= @lead.subscribed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:download_id) %>:</strong></dt>
  <dd><%= @lead.download_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:welcome_email_sent) %>:</strong></dt>
  <dd><%= @lead.welcome_email_sent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:viewed_demo) %>:</strong></dt>
  <dd><%= @lead.viewed_demo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:viewed_demo_at) %>:</strong></dt>
  <dd><%= @lead.viewed_demo_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:captured_on) %>:</strong></dt>
  <dd><%= @lead.captured_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @lead.comment %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leads_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lead_path(@lead), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lead_path(@lead),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
